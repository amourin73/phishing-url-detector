{
  "manifest_version": 3,
  "name": "Phishing URL Detector",
  "version": "1.1",
  "description": "Detect phishing URLs using machine learning and explain why sites are suspicious or legitimate",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://localhost:5000/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Check URL Safety"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [{
    "resources": ["page_scanner.js"],
    "matches": ["<all_urls>"]
  }]
}